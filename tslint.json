{
    "rules": {
        "max-line-length": [
            true,
            100
        ],
        "no-inferrable-types": true,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "no-switch-case-fall-through": true,
        "eofline": true,
        "no-string-literal": true,
        "no-eval": true,
        "no-duplicate-variable": true,
        "no-arg": true,
        "no-internal-module": true,
        "no-trailing-whitespace": true,
        "no-bitwise": true,
        "no-var-requires": true,
        "no-shadowed-variable": true,
        "no-unused-expression": true,
        "no-unused-variable": true,
        "one-line": [
            true,
            "check-catch",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            true,
            "double",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "curly": true,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "no-any": true
    }
}